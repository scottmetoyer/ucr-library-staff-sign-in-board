@page
@model IndexModel
@{ ViewData["Title"] = "Sign In/Out"; }

@if (Model.ErrorMessage != string.Empty)
{
<div class="alert alert-danger" role="alert">
    @Model.ErrorMessage
</div>}

@if (Model.SuccessMessage != string.Empty)
{
<div class="alert alert-success" role="alert">
    @Model.SuccessMessage
</div>}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Please swipe your R'Card to sign in/out of your work location.</p>

    <div class="mt-3 mb-3"><img src="~/images/swipe.svg" style="width: 100px;" /></div>
    <form method="post">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="form-group">
                    <input asp-for="SwipeInput" type="password" class="form-control" id="swipeinput" />
                    <span asp-validation-for="SwipeInput" class="text-danger"></span>
                    <button type="submit" style="display: none;"></button>
                </div>
            </div>
        </div>
    </form>

    <p>Don't have your R'Card? <a href="~/Login">Click here to login with your library username and password.</a></p>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">$('#swipeinput').focus();
        setTimeout(function () {
            $('.alert').fadeOut('fast');
        }, 5000);</script>
}